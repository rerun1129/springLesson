<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springlesson.users.repository.UserRepository">

    <select id="findByEmail" resultType="com.example.springlesson.users.domain.vo.Users">
        select
            id, name, email, picture, role
        from users
        where email = #{email}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into users
        values (#{id}, #{name}, #{email}, #{picture}, #{role}, #{password})
    </insert>

    <update id="update">
        update users
        set name = #{name},
            picture = #{picture},
            role = #{role}
        where id = #{id}
    </update>

    <delete id="delete">
        delete from users
        where id = #{id}
    </delete>

</mapper>